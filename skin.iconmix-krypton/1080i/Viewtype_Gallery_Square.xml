<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="CommonSquare">
    <control type="group">
					  <posx>25</posx>
              <posy>50</posy>
						<animation reversible="true" effect="zoom" center="auto" start="100" end="120" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="true" effect="zoom" center="auto" start="120" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<control type="image">
						               
              <width>230</width>
              <height>205</height>
              <texture>frames/cdcasexback.png</texture>
              <aspectratio scalediffuse="true">stretch</aspectratio>
            </control>
            <control type="image">
              <left>12</left>
              <top>3</top>
              <width>225</width>
              <height>200</height>
              <texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
              <aspectratio>keep</aspectratio>
            </control>
            <control type="image">              
              <width>230</width>
              <height>205</height>
              <texture>frames/cdcasexup.png</texture>
              <aspectratio scalediffuse="true">stretch</aspectratio>
            </control>   
                    
            <control type="button">
      			  <top>210</top>
      			  
      			  <width max="245">auto</width>
      			  <left>5</left>
      			  <height>30</height>
      			  <align>center</align>
      			  <aligny>center</aligny>
      			  <textoffsetx>10</textoffsetx>
      			  
      			  <font>METF_RecentlyAddedListText</font>
    					<textcolor>TitleText</textcolor>
    					<label>$VAR[ListItemTitle]</label>
      			
      				<texturefocus colordiffuse="FFFFAAFF">frames/fondtitre2.png</texturefocus>
              <texturenofocus colordiffuse="FFFFAAFF">frames/fondtitre2.png</texturenofocus>
      			</control>	
            
            
  					
					</control>
    
  </include>
	<include name="Viewtype_Gallery_Square">
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<!-- Browser -->
			<control type="panel" id="58">
				<viewtype label="$LOCALIZE[31822]">icon</viewtype>
				<posx>25</posx>
				<posy>10</posy>
				<width>1870</width>
				<height>810</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<onup>58</onup>
				<ondown>58</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>

<onfocus condition="Skin.HasSetting(CacheFond)">SetProperty(ActeurDirection,left,Home)</onfocus>
<onfocus condition="!Skin.HasSetting(CacheFond)">SetProperty(ActeurDirection,right,Home)</onfocus>


				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewGallerySquare)</visible>
				<itemlayout width="255" height="295">
				<include>CommonSquare</include>
				</itemlayout>
				<focusedlayout width="255" height="295">
					<include>CommonSquare</include>
				</focusedlayout> 
			</control>
			
			<!-- Browser label and flags 
		

			<include>ScrollBar_Vertical</include>-->
		</control>
	</include>
</includes>
