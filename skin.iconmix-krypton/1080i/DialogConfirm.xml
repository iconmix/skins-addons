<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<animation type="WindowOpen" reversible="false">
		<effect type="zoom" start="80" end="100" center="auto" easing="out" tween="back" time="300" />
		<effect type="fade" start="0" end="100" time="300" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="zoom" start="100" end="80" center="auto" easing="in" tween="back" time="300" />
		<effect type="fade" start="100" end="0" time="300" />
	</animation>
	<controls>
		<control type="group">
			<posx>320</posx>
			<posy>150</posy>
			<control type="image">
				<description>Background Panel</description>
				<width>800</width>
				<height>300</height>
				<texture>frames/Dialog_Glass2Panel.png</texture>
				<colordiffuse>DialogBackgroundColor</colordiffuse>
			</control>
			<control type="label" id="1">
				<description>Heading</description>
				<posx>50</posx>
				<posy>50</posy>
				<width>730</width>
				<height>30</height>
				<font>METF_Menu</font>
				<textcolor>DialogTextFO</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label></label>
			</control>
			<control type="textbox" id="9">
				<posx>50</posx>
				<posy>85</posy>
				<width>730</width>
				<height>120</height>
				<align>center</align>
				<font>METF_InfoText</font>
				<textcolor>LowerText</textcolor>
				<include condition="!Skin.HasSetting(AutoScrollFast)">AutoScrollShort</include>
				<include condition="Skin.HasSetting(AutoScrollFast)">AutoScrollShortFast</include>
				<label></label>
				<align>center</align>
			</control>
			<control type="progress" id="20">
				<description>Progress Bar</description>
				<posx>45</posx>
				<posy>180</posy>
				<width>650</width>
				<height>27</height>
				<texturebg>osd/osd_progress_back3.png</texturebg>
				<lefttexture>osd/osd_progress_left3.png</lefttexture>
				<midtexture>osd/osd_progress_mid3.png</midtexture>
				<righttexture>osd/osd_progress_right3.png</righttexture>
				<colordiffuse>DialogProgressBar</colordiffuse>
				<info>System.Progressbar</info>
			</control>

			<control type="grouplist" id="9000">
				<orientation>horizontal</orientation>
				
				<posy>215</posy>
				<width>730</width>
				<align>center</align>
				<control type="button" id="10">
					<description>Cancel</description>
          <include>SettingsLabelLeftMini</include>
					<label>$LOCALIZE[106]</label>
					<onleft>11</onleft>
					<onright>11</onright>
					<onup>11</onup>
					<ondown>11</ondown>
				</control>
				<control type="button" id="11">
					<description>Ok</description>
          <include>SettingsLabelLeftMini</include>
					<label>$LOCALIZE[107]</label>
					<onleft>10</onleft>
					<onright>10</onright>
					<onup>10</onup>
					<ondown>10</ondown>
				</control>
				<control type="button" id="12">
					<description>custom</description>
          <include>SettingsLabelLeftMini</include>
					<label>$LOCALIZE[106]</label>
					<onleft>10</onleft>
					<onright>10</onright>
					<onup>10</onup>
					<ondown>10</ondown>
				</control>
			</control>	
		</control>	
	</controls>
</window>
